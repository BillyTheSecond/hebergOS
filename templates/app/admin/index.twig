{% extends 'index.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('admin') }}
    {{ encore_entry_link_tags('users') }}
    {{ encore_entry_link_tags('container') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('users') }}
{% endblock %}

{% block main %}
    <h1>{{ 'admin.users.title' | trans }} <a href="{{ path('app_register') }}">{{ 'admin.users.action.add'|trans }}</a></h1>
    <section class="users">
        {% include 'app/admin/components/users.twig' with {'users': users} %}
    </section>

    <h1>{{ 'admin.containers.title' | trans }}</h1>

    <section class="containers">
        {% for key, container in containers %}
            {% include 'app/components/container.twig' with {'id': key, 'container': container, 'container_view_uri': path('app_admin_container', {'container_id': key}) } %}
        {% endfor %}
    </section>
{% endblock %}