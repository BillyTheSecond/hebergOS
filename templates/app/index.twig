{% extends 'index.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('container') }}
{% endblock %}



{% block main %}
    <h1>{{ 'app.titles.projects' | trans }}</h1>

    {% if containers|length == 0 %}
        <button class="first-project" type="button">{{ 'app.projects.new.first'|trans }}</button>
    {% else %}
        <section class="containers">
            {% for key, container in containers %}
                {% include 'components/container.twig' with {'id': key, 'container': container, 'container_view_uri': path('app_container_overview', {'container': key})} %}
            {% endfor %}
        </section>
    {% endif %}
{% endblock %}