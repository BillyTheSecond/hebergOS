{% extends 'index.twig' %}

{% block title %}{{ 'pages.titles.notifications'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('notifications') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('notifications') }}
{% endblock %}

{% block main %}
    <div class="card">
        <h1>{{ 'notifications.title'|trans }}</h1>
    </div>

    <div id="notifs-content">
        {% if notifications|length == 0 %}
            <div class="card">
                <p class="text-center">{{ 'notifications.empty'|trans }}</p>
            </div>
        {% else %}
                {% for notif in notifications %}
                    <div class="card notif">
                        <h3>{{ ('notifications.type.'~notif.type.value)|trans }}</h3>
                        <h4>{{ 'notifications.date'|trans }} {{ notif.date|date('d/m/y H:i') }}</h4>
                        {% if notif.container %}
                            <p>{{ notif.container.name }}<br>
                                {{ 'notifications.request.by'|trans }} {{ notif.user.firstname }} {{ notif.user.lastname }} ({{ notif.user.username }})<br>
                                {{ notif.user.email }}</p>
                        {% else %}
                            <h5>{{ notif.title }}</h5>
                        {% endif %}
                        {% if notif.description != '' %}
                            <p class="notif-description">{{ notif.description }}</p>
                        {% else %}
                            <p class="italic">{{ 'notifications.description.empty'|trans }}</p>
                        {% endif %}

                        <div class="form-validation">
                        {% if notif.container %}
                            <a class="get-container-notification accent-cta" href="{{ path('app_admin_container_overview', {'container': notif.container.id}) }}">{{ 'notifications.action.container'|trans }}</a>
                        {% endif %}
                        {% if notif.user %}
                            <a class="get-user-notification accent-cta" href="{{ path('app_admin_view_user', {'user': notif.user.id}) }}">{{ 'notifications.action.user'|trans }}</a>
                        {% endif %}
                        <button class="delete-notification accent-cta" type="button" data-route="{{ path('app_admin_delete_notification', {'notification': notif.id}) }}">{{ 'notifications.action.delete'|trans }}</button>
                        </div>
                    </div>
                {% endfor %}
        {% endif %}
    </div>
{% endblock %}